<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:background="@color/black"/>

    <Button
        android:id="@+id/bOne"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Nrupul"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/v"
        app:layout_constraintEnd_toStartOf="@+id/bTwo"/>
    <Button
        android:id="@+id/bTwo"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Prateek"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/v"/>
    <Button
        android:id="@+id/btThree"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:text="Albert"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/v"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btFour"/>
    <Button
        android:id="@+id/btFour"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:text="Aman"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btThree"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>